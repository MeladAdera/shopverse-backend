{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // إعدادات الـ type definitions
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    
    // إعدادات module resolution
    "moduleResolution": "Node16",
    
    // إزالة allowImportingTsExtensions
    "allowImportingTsExtensions": false,
    
    // إزالة ignoreDeprecations أو استخدام القيمة الصحيحة
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}